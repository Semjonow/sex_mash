%nav.top-bar
  %ul
    %li.name
      %h1
        %a.brand(href=root_path)= raw '{ Sex Mash &reg; }'
  %section
    %ul.right
      %li.divider
      - unless user_signed_in?
        %li.has-button
          = link_to user_omniauth_authorize_path(:facebook), class: 'button' do
            %i.social.foundicon-facebook{ style: 'position:relative;top:2px;' }
            Log in
      -else
        %li.has-dropdown
          = link_to '#' do
            = image_tag current_user.profile.logo, alt: current_user.username, width: '25', id: 'current-user-logo'
            = current_user.profile.name.titleize
          %ul.dropdown
            %li
              = link_to edit_user_path do
                %i.general.foundicon-settings
                Settings
            %li
              = link_to destroy_user_session_path, :data => { confirm: 'Are you sure?' } do
                %i.general.foundicon-remove
                Log out
